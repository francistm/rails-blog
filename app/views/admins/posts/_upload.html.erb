<tr>
  <td><%= upload.id %></td>
  <td><%= upload.file_file_name %></td>
  <td><%= number_to_human_size upload.file_file_size %></td>
  <td>
    <input value="<%= upload.id %>" name="post[upload_ids][]" type="hidden" />
    <button type="button" data-markdown-url data-url="<%= upload.file.url %>" class="btn btn-primary">插入原始链接</button>

    <% if upload.is_image? %>
    <button type="button" data-markdown-image data-url="<%= qiniu_image_path(upload.file.url, thumbnail: '750x>') %>" class="btn btn-primary">插入图片链接</button>
    <% end %>
  </td>
</tr>
